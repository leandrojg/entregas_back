<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Animate css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <!-- Boostrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Ejs</title>

</head>
<body>
        <!-- SOCKET -->

        <div class="container h-100">
            <div class="row h-100">
              <div class="col-md-4 my-auto">
                <form class="card card-body rounded-0" id="noteForm">
                  <h1 class="h3 mb-5">Add a note please!!</h1>
      
                  <input
                    type="text"
                    id="title"
                    name="title"
                    placeholder="Write a title"
                    class="form-control rounded-0"
                    autofocus
                  />
      
                  <textarea
                    name="description"
                    id="description"
                    rows="2"
                    class="form-control rounded-0 mb-3 mt-3"
                    placeholder="Write a description"
                  ></textarea>
      
                  <button class="btn btn-dark rounded-0"> Send </button>
                </form>
              </div>
              <div class="col-md-8 py-3">
                <div id="notes">notes</div>
              </div>
            </div>
          </div>
      

    <!-- FORMULARIO PRODUCTOS -->
    <div class="container">
        <div class="row">
            <div class="col">
        
        <form action="guardar" method="post">
            <legend>Ingrese el nuevo Producto</legend>
            <div class="mb-3">
                <label for="title">Titulo:</label><br>
                <input id="title"  name="title"  type="text" class="form-control" placeholder="Nombre del producto" value= " <% if (typeof validaciones != 'undefined') { %><%= valores.title  %><%}%>" >
            </div>
            <div class="mb-3">
                <label for="price">Precio:</label><br>
                <input id="price"  name="price"  type="number" class="form-control" placeholder="Precio del producto"value=" <% if (typeof validaciones != 'undefined') { %><%= valores.price %><%}%>"  >
            </div>
            <div class="mb-3">
                <label for="thumbnail">fotografia:</label><br> 
                <input id="thumbnail"  name="thumbnail"  type="text" class="form-control" placeholder="Imagen del producto"value=" <% if (typeof validaciones != 'undefined') { %><%= valores.thumbnail  %><%}%>" >
            </div>
                <button type="submit" value="Enviar" class="btn btn-primary"> Enviar </button>
            </div>
        </form>   

        <% if (typeof validaciones != 'undefined') { %>
            <% validaciones.forEach((validacion) => { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong><%= validacion.msg %></strong> 
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% }) %>
        <% } %>
            </div>
        </div>
    </div>


        <!-- FORMULARIO MOSTRAR PRODUCTOS -->
        <% if(status){ %>
            <h1><%= mensaje %></h1>
            <% } else { %>
            <h1> No existe el mensaje </h1> 
            <% } %> 

            
         <div class= "d-flex flex-row flex-wrap justify-content-evenly"></div>
            <ul>
            <% lista.map(e => { %> 
            <div class="card " style="width: 18rem;">
                <img src="<%= e.thumbnail %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= e.title %></h5>
                  <p class="card-text"><%= e.price %></p>
                  <a href="#" class="btn btn-primary">Comprar</a>
                </div>
              </div>
            <% }); %>    
            </ul>  
        </div>



    <script src="js/app.js"></script>
    <script src="js/crud.js"></script>
     <!-- SOCKET -->
    <script src="/socket.io/socket.io.min.js"></script>
    <script src="./ui.js"></script>
    <script src="./sockets.js"></script>
    <script src="./main.js"></script>

</body>
</html>