<!-- En el main pongo el formulario de chat -->

<div class="container h-100">
  <div class="row h-100">
    <div class="col-md-4 my-auto">
      <form class="card card-body rounded-0" id="noteForm">
        <h1 class="h3 mb-5">Add a note please!!</h1>

        <input
          type="text"
          id="title"
          name="title"
          placeholder="Write a title"
          class="form-control rounded-0"
          autofocus
        />

        <textarea
          name="description"
          id="description"
          rows="2"
          class="form-control rounded-0 mb-3 mt-3"
          placeholder="Write a description"
        ></textarea>

        <button class="btn btn-dark rounded-0">Send</button>
      </form>
    </div>
    <div class="col-md-8 py-3">
      <div id="notes">notes</div>
    </div>
  </div>
</div>
